<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/image_for_receiver_sent_offers_frg"
        android:layout_width="@dimen/image_width_and_height"
        android:layout_height="@dimen/image_width_and_height"
        android:layout_marginStart="@dimen/padding"
        android:layout_marginTop="@dimen/padding"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/male_icon" />

    <TextView
        android:id="@+id/username_for_reciever_sent_offers_frg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="76dp"
        android:layout_marginTop="60dp"
        android:text="@string/username"
        app:layout_constraintStart_toEndOf="@+id/image_for_receiver_sent_offers_frg"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/category_for_sender_post_sent_offers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="296dp"
        android:layout_marginEnd="16dp"
        android:text="@string/category"
        android:textColor="@color/custom_blue"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/sent_category_for_receiver_sent_offers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="36dp"
        android:text="@string/category"
        android:textColor="@color/custom_blue"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/body_for_receiver_post_sent_offers_frg"
        android:layout_width="348dp"
        android:layout_height="103dp"
        android:layout_marginTop="68dp"
        android:text="@string/lorem"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/username_for_reciever_sent_offers_frg" />

    <ImageView
        android:id="@+id/image_for_sender_sent_offers_frg"
        android:layout_width="@dimen/image_width_and_height"
        android:layout_height="@dimen/image_width_and_height"
        android:layout_marginStart="84dp"
        android:layout_marginTop="28dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/body_for_receiver_post_sent_offers_frg"
        app:srcCompat="@drawable/female_icon" />

    <TextView
        android:id="@+id/username_for_sender_sent_offers_frg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:text="@string/username"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.51"
        app:layout_constraintStart_toEndOf="@+id/image_for_sender_sent_offers_frg"
        app:layout_constraintTop_toBottomOf="@+id/body_for_receiver_post_sent_offers_frg" />

    <TextView
        android:id="@+id/body_for_sender_post_sent_offers_frg"
        android:layout_width="268dp"
        android:layout_height="80dp"
        android:layout_marginTop="32dp"
        android:text="@string/lorem"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.591"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/image_for_sender_sent_offers_frg" />

</androidx.constraintlayout.widget.ConstraintLayout>